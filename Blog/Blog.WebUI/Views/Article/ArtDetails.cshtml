@model Blog.WebUI.Models.ArticleReviewViewModel

@{
    ViewBag.Title = "ArtDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card ml-4">
    <div class="card-header text-center">
        <h4>@Model.article.Name</h4>
    </div>
    <div class="card-body">

        <p class="card-text">@Model.article.Description</p>


    </div>
    <div class="card-footer text-muted text-left">
        <span>@Model.article.Date.ToString().Split(' ')[0]</span>
        <span class="float-right">Author</span>
    </div>
    @Html.Action("AddReview","Review",new {ArticleId= Model.article.ArticleId})

    @foreach (Blog.Domain.Entities.Review r in Model.reviews)
    {
        <div class="mt-2 ">


            <div class="card">
                <div class="card-body">
                    <h3>@Html.DisplayFor(modelItem => r.Author)</h3>


                    <p>@Html.DisplayFor(modelItem => r.Text)</p>
                    <br />
                </div>
            </div>

            


        </div>

    }
</div>
@section Vote {
    @Html.Partial("~/Views/Vote/VotingRes.cshtml",new ViewDataDictionary { { "ArticleId", Model.article.ArticleId } })
}


